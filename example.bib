    author = {Milligan, Ryan O. and Kerr, Graham S. and Dennis, Brian R. and Hudson, Hugh S. and Fletcher, Lyndsay and Allred, Joel C. and Chamberlin, Phillip C. and Ireland, Jack and Mathioudakis, Mihalis and Keenan, Francis P.},
    month = sep,
    year = {2014},
    note = {Publisher: The American Astronomical Society},
    pages = {70},
}
